<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonGreenCity">
        <item name="android:elevation">8dp</item>
        <item name="android:paddingLeft">19dp</item>
        <item name="android:paddingRight">19dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--STILE TESTO-->
    <style name="GreenCityTextView" parent="android:Widget.Holo.TextView">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="GreenCityEditText" parent="android:Widget.Holo.EditText">
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ButtonDialogMarker" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/confirm_dialog</item>
    </style>

    <!--STILE CARD GRAFICI-->
    <style name="CardChart" parent="CardView">
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="android:backgroundTint">@color/card_color</item>
    </style>
</resources>
